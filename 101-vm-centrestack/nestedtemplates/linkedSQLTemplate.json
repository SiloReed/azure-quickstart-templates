{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminSQLUsername": {
            "defaultValue": "dbadmin",
            "type": "string",
            "minLength": 1,
            "metadata": {
              "description": "Username for the Azure SQL Server."
            }
          },
          "adminSQLPassword": {
            "type": "securestring",
            "metadata": {
              "description": "Password for the Azure SQL Server."
            }
          },
        "serverNameSQL": {
            "defaultValue": "csazuresql",
            "type": "string",
            "minLength": 1,
            "metadata": {
              "description": "Specifiy the name of Azure SQL Server."
            }
          },
          "databaseName": {
            "defaultValue": "csmain",
            "type": "string",
            "minLength": 1,
            "metadata": {
              "description": "Specifiy the name of the SQL database."
            }
          },
          "collation": {
            "defaultValue": "SQL_Latin1_General_CP1_CI_AS",
            "type": "string",
            "minLength": 1,
            "metadata": {
              "description": "Specifiy the name of the SQL database collation."
            }
          },
          "maxSizeBytes": {
            "defaultValue": 268435456000,
            "type": "int",
            "metadata": {
              "description": "Specifiy the name of the SQL database maxiumum size in bytes."
            }
          },
          "sampleName": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
              "description": "Specifiy the name of the SQL database sample name."
            }
          },
          "zoneRedundant": {
            "defaultValue": false,
            "type": "bool",
            "metadata": {
              "description": "Specifiy the name of the SQL database sample name."
            }
          },
          "licenseType": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
              "description": "Specifiy the name of the SQL database license type."
            }
          },
          "skuName": {
            "defaultValue": "S0",
            "type": "string",
            "metadata": {
              "description": "Specifiy the name of the SQL database Database Transaction Units (DTUs)."
            },
            "allowedValues": [
                "S0",
                "S1",
                "S2",
                "S3",
                "S4",
                "S5",
                "S6",
                "S7",
                "S8",
                "S9",
                "S10",
                "S11",
                "S12"
            ]
          },
          "tier": {
            "defaultValue": "Standard",
            "type": "string",
            "metadata": {
              "description": "Specifiy the name of the SQL database pricing tier."
            },
            "allowedValues": [
                "Standard"
              ]
          },
          "allowAzureIps": {
            "defaultValue": true,
            "type": "bool",
            "metadata": {
              "description": "Specifiy whether to allow Azure services to access the SQL server."
            }
          },
          "enableATP": {
            "defaultValue": false,
            "type": "bool",
            "metadata": {
              "description": "Specifiy whether to enable SQL Advanced Threat Protection (ATP)."
            }
          }
                          
    },
    "variables": {
        "sqlServerName": "[toLower(concat(parameters('serverNameSQL'), uniqueString(resourceGroup().id)))]"
    },
    "resources": [
        {
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "name": "[variables('sqlServerName')]",
            "properties": {
                "administratorLogin": "[parameters('adminSQLUsername')]",
                "administratorLoginPassword": "[parameters('adminSQLPassword')]",
                "version": "12.0"
            },
            "resources": [
                {
                    "apiVersion": "2017-10-01-preview",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', variables('sqlServerName'))]"
                    ],
                    "location": "[resourceGroup().location]",
                    "name": "[parameters('databaseName')]",
                    "properties": {
                        "collation": "[parameters('collation')]",
                        "maxSizeBytes": "[parameters('maxSizeBytes')]",
                        "sampleName": "[parameters('sampleName')]",
                        "zoneRedundant": "[parameters('zoneRedundant')]",
                        "licenseType": "[parameters('licenseType')]"
                    },
                    "sku": {
                        "name": "[parameters('skuName')]",
                        "tier": "[parameters('tier')]"
                    },
                    "type": "databases"
                },
                {
                    "condition": "[parameters('allowAzureIps')]",
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', variables('sqlServerName'))]"
                    ],
                    "location": "[resourceGroup().location]",
                    "name": "AllowAllWindowsAzureIps",
                    "properties": {
                        "endIpAddress": "[reference('linkedNetworkTemplate').outputs.privateIPAddress.value]",
                        "startIpAddress": "[reference('linkedNetworkTemplate').outputs.privateIPAddress.value]"
                    },
                    "type": "firewallrules"
                },
                {
                    "condition": "[parameters('enableATP')]",
                    "apiVersion": "2017-03-01-preview",
                    "type": "securityAlertPolicies",
                    "name": "Default",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', variables('sqlServerName'))]",
                        "[concat('Microsoft.Sql/servers/', variables('sqlServerName'), '/databases/', parameters('databaseName'))]"
                    ],
                    "properties": {
                        "state": "Enabled",
                        "disabledAlerts": [],
                        "emailAddresses": [],
                        "emailAccountAdmins": true
                    }
                }
            ],
            "type": "Microsoft.Sql/servers",
            "dependsOn": [
              "[reference('linkedNetworkTemplate').outputs.nicResourceId.value]"
            ]
        }
    ],
    "outputs": {
        "dbconnstr": {
            "value": "[concat('Microsoft.Sql/servers/', variables('sqlServerName'), '/databases/', parameters('databaseName'))]",
            "type": "string"
        }
    }
}